<div class="container">
  <div class="text-center">
    <%= image_tag "user.png", class:"avatar-large" %>
    <div class="form-card col-8 mx-auto mt-5">
      <%= simple_form_for([@user]) do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.error_notification %>
          <%= f.button :submit, "Update", class:"teal-button my-3" %>
        <% end %>
    </div>
  </div>
</div>
